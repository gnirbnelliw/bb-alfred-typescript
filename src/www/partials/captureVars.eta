</form>

<div id="output" class="small"></div>

<!-- Handle Form Submission -->
<script>
  function validateForm(data) {
    const reasons = {};
    // Add any validation logic here if needed
    const {
      GITHUB_TOKEN,
      LINEAR_API_KEY,
      OPENAI_KEY,
      TESTMO_API_KEY,
      NOTION_API_KEY,
    } = data;

    if (GITHUB_TOKEN.trim().length < 40)
      reasons["GITHUB_TOKEN"] = "Github token must be at least 40 characters.";

    if (LINEAR_API_KEY.trim().length < 20)
      reasons["LINEAR_API_KEY"] =
        "Linear API key must be at least 20 characters.";

    if (OPENAI_KEY.trim().length < 20)
      reasons["OPENAI_KEY"] = "OpenAI key must be at least 20 characters.";
    if (TESTMO_API_KEY.trim().length < 20)
      reasons["TESTMO_API_KEY"] =
        "Testmo API key must be at least 20 characters.";
    if (NOTION_API_KEY.trim().length < 20)
      reasons["NOTION_API_KEY"] =
        "Notion API key must be at least 20 characters.";
    return Object.keys(reasons).length === 0 ? true : reasons;
  }
  document
    .getElementById("settings-form")
    .addEventListener("submit", function (e) {
      e.preventDefault();

      const data = {};
      const formData = new FormData(e.target);
      formData.forEach((val, key) => (data[key] = val));

      const isValid = validateForm(data);
      console.log(`üî• Form valid: ${JSON.stringify(isValid, undefined, 2)}`);
      console.log("-".repeat(40));

      if (isValid !== true) {
        console.log("it is not true...");
        for (const [key, message] of Object.entries(isValid)) {
          console.log(`‚ö†Ô∏è ${key}: ${message}`);
          const label = document.querySelector(`label[data-id="${key}"]`);
          const reason = document.querySelector(`div[data-id="${key}_REASON"]`);
          if (reason) {
            reason.textContent = message;
            reason.style.color = "red";
          }
          if (label) {
            label.style.color = "red";
          }
        }
        return;
      }

      const encoded = encodeURIComponent(JSON.stringify(data));

      // IMPORTANT. IGNORE FUCKING CHATGPT. MOTHERFUCKER.
      const url = `alfred://runtrigger/com.ben-willenbring.ts/save-vars/?argument=${encoded}`;

      console.log(JSON.stringify(data, undefined, 2))

      document.getElementById("output").textContent = JSON.stringify(data, undefined, 2);

      // alert(JSON.stringify(data));

      // window.location.href = url;
    });
</script>
