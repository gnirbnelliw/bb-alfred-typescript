{
  "name": "bb-alfred-typescript",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,eta,css,js,json --exec tsx src/server.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:alfred-icons": "vitest src/schemas/alfred-icon.test.ts",
    "test:alfred-menu-items": "vitest src/schemas/alfred-menu-item.test.ts",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "check": "biome check --write ./src",
    "build_server": "npx esbuild src/server.ts --bundle --platform=node --format=cjs --outfile=dist/server.js",
    "empty-dist": "rm -rf ./dist && mkdir dist",
    "sync:scripts": "cp -R ./scripts ./dist/scripts",
    "sync:images": "cp -R ./src/img ./dist/img",
    "sync:markdown": "cp -R ./src/markdown ./dist/markdown",
    "sync:www": "cp -R ./src/www ./dist/www",
    "sync:jxa": "cp ./src/*.jxa ./dist/",
    "sync:assets": "yarn sync:images && yarn sync:markdown && yarn sync:jxa && yarn sync:www",
    "build": "yarn empty-dist && yarn build_server && npx esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js && yarn sync:www && yarn sync:assets && yarn sync:scripts",
    "sync:alfred": "yarn build && yarn tsx scripts/sync-alfred.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "alfy": "^3.0.0",
    "dotenv": "^17.2.3",
    "eta": "^4.4.1",
    "hono": "^4.10.6",
    "octokit": "^5.0.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/http-server": "^0.12.4",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.8",
    "esbuild": "^0.27.0",
    "nodemon": "^3.1.11",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
